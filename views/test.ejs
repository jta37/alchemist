<body>
	<div>
		<h1>Sentiment Analysis & Entity Extraction of Twitter Timelines</h1>
	</div>
	<hr>
	<div class='container'>
		<div class='page-header'>
			<h1><em>The Alchemist: Node.js, Twitter REST & AlchemyAPI</em><br />
				<small>request, parse and display test</small></h1>
		</div>
		
		<h1>Render User Timeline</h1>

		<h3>Tweets</h3>
		 <% tweets.forEach(function(tweet) { %>
			<p><strong>Text:</strong> <%= tweet %><br/>
		<% }) %>
		
		<h3>Response Object</h3>
		<textarea rows='5' class='form-control'><% entities.forEach(function(entity) { %> <%= entity.type %> <% }) %> </textarea>
		
		<h3>Entities</h3>
		<% entities.forEach(function(entity) { %>
			<p><strong>Text:</strong> <%= entity.text %><br/>
			<strong>Type:</strong> <%= entity.type %><br/>
			<strong>Relevance:</strong> <%= entity.relevance %><br/>
			<strong>Sentiment:</strong> <%= entity.sentiment.type %></p>
		<% }) %>
		
		<hr>

</body>
